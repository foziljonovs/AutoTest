<Page x:Class="AutoTest.Desktop.Pages.AuthForPage.RegisterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoTest.Desktop.Pages.AuthForPage" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      Title="RegisterPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label
            Grid.Row="0"
            Content="Register"
            Foreground="#344e41"
            FontSize="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Style="{DynamicResource Label}"/>

        <StackPanel Grid.Row="1">
            <Border
                    Height="40"
                    Width="250"
                    CornerRadius="10"
                    Margin="0 10"
                    BorderThickness="1"
                    BorderBrush="#344e41">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <materialDesign:PackIcon
                        Grid.Column="0"
                        Kind="BadgeAccountHorizontal"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Foreground="#588157"
                        Width="20"
                        Height="20"/>
                    <TextBox
                        Grid.Column="1"
                        x:Name="FullnameTxt"
                        FontFamily="Jetbrains Mono"
                        FontWeight="SemiBold"
                        FontSize="18"   
                        VerticalContentAlignment="Center"
                        Foreground="#344e41"
                        Background="Transparent"
                        BorderThickness="0"/>
                </Grid>
            </Border>
            <Border
                Height="40"
                Width="250"
                CornerRadius="10"
                Margin="0 10"
                BorderThickness="1"
                BorderBrush="#344e41">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <materialDesign:PackIcon
                        Grid.Column="0"
                        Kind="Account"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Foreground="#588157"
                        Width="20"
                        Height="20"/>
                    <TextBox
                        Text="+998"
                        Grid.Column="1"
                        x:Name="UsernameTxt"
                        FontFamily="Jetbrains Mono"
                        FontWeight="SemiBold"
                        FontSize="18"   
                        VerticalContentAlignment="Center"
                        Foreground="#344e41"
                        Background="Transparent"
                        BorderThickness="0"/>
                </Grid>
            </Border>
            <Border
                Height="40"
                Width="250"
                CornerRadius="10"
                Margin="0 10 0 5"
                BorderThickness="1"
                BorderBrush="#344e41">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <materialDesign:PackIcon
                        Grid.Column="0"
                        Kind="Lock"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Foreground="#588157"
                        Width="20"
                        Height="20"/>
                    <DockPanel Grid.Column="1">
                        <PasswordBox
                            x:Name="PasswordPwb"
                            FontFamily="Jetbrains Mono"
                            Visibility="Visible"
                            FontWeight="SemiBold"
                            FontSize="18"   
                            Width="160"
                            VerticalContentAlignment="Center"
                            Foreground="#344e41"
                            Background="Transparent"
                            BorderThickness="0"/>

                        <TextBox
                            x:Name="PasswordTxt"
                            Visibility="Collapsed"
                            Width="160"
                            Background="Transparent"
                            BorderThickness="0"
                            VerticalContentAlignment="Center"
                            FontSize="18"
                            FontFamily="Jetbrains Mono"
                            FontWeight="SemiBold"
                            Foreground="#344e41"/>

                        <Button x:Name="EyeButton"
                                Margin="0 0 10 0"
                                Visibility="Visible"
                                HorizontalAlignment="Right"
                                Click="EyeButton_Click"
                                Style="{DynamicResource EyeButtonStyle}"/>

                        <Button x:Name="DisEyeButton"
                                Margin="0 0 10 0"
                                Visibility="Collapsed"
                                Click="DisEyeButton_Click"
                                Style="{DynamicResource DisEyeButtonStyle}"/>
                    </DockPanel>
                </Grid>
            </Border>
            
            <Border Margin="10 5"
                    MouseUp="Border_MouseUp">
                <Grid>
                    <Label x:Name="RegisterLbl"
                           Content="Already Registered? Log In Here!"
                           Style="{DynamicResource Label}"
                           FontWeight="SemiBold"
                           Margin="5 0"
                           Foreground="#588157"
                           FontSize="10"/>

                    <materialDesign:PackIcon
                            Kind="ArrowRight"
                            Foreground="#588157"
                            Width="20"
                            Height="20"
                            Margin="5 0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"/>
                </Grid>
            </Border>
            
            <Button
                x:Name="RegisterBtn"
                Content="Register"
                Height="40"
                Width="250"
                Background="#588157"
                Foreground="#dad7cd"
                FontSize="18"
                FontWeight="SemiBold"
                Margin="0 5"
                Click="RegisterBtn_Click"
                Style="{DynamicResource mainButton}"/>

        </StackPanel>
    </Grid>
</Page>
