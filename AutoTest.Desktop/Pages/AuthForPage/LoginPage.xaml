<Page x:Class="AutoTest.Desktop.Pages.AuthForPage.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
      xmlns:local="clr-namespace:AutoTest.Desktop.Components.Loader"
      mc:Ignorable="d" 
      Title="LoginPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Name="LoginLbl"
                       Grid.Row="0"
                       Content="Tizimga kirish"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="Black"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Style="{DynamicResource Label}"/>
        <StackPanel Grid.Row="1">
            <Border
                Height="40"
                Width="250"
                CornerRadius="10"
                Margin="0 10"
                BorderThickness="1"
                BorderBrush="#344e41">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <materialDesign:PackIcon
                        Grid.Column="0"
                        Kind="Account"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Foreground="#588157"
                        Width="20"
                        Height="20"/>

                    <TextBox
                        Grid.Column="1"
                        Text="+998"
                        x:Name="PhoneNumberTxt"
                        FontFamily="Jetbrains Mono"
                        FontWeight="SemiBold"
                        FontSize="18"   
                        MaxLength="13"
                        VerticalContentAlignment="Center"
                        Foreground="Black"
                        Background="Transparent"
                        BorderThickness="0"/>
                </Grid>
            </Border>

            <Border 
                Height="40"
                Width="250"
                CornerRadius="10"
                Margin="0 10 0 5"
                BorderBrush="#344e41"
                BorderThickness="1">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <materialDesign:PackIcon
                        Grid.Column="0"
                        Kind="Lock"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Foreground="#588157"
                        Width="20"
                        Height="20"/>
                    <DockPanel Grid.Column="1">
                        <PasswordBox
                            x:Name="PasswordPwd"
                            Background="Transparent"
                            BorderThickness="0"
                            Width="160"
                            HorizontalAlignment="Left"
                            VerticalContentAlignment="Center"
                            FontSize="18"
                            Foreground="Black"
                            PasswordChanged="PasswordPwd_PasswordChanged"/>

                        <TextBox
                            x:Name="PasswordTxt"
                            Visibility="Collapsed"
                            Width="160"
                            Background="Transparent"
                            BorderThickness="0"
                            VerticalContentAlignment="Center"
                            FontSize="18"
                            FontFamily="Jetbrains Mono"
                            FontWeight="SemiBold"
                            Foreground="Black"/>

                        <Button
                            x:Name="EyeButton"
                            Margin="0 0 10 0"
                            Visibility="Visible"
                            HorizontalAlignment="Right"
                            Click="EyeButton_Click"
                            Style="{DynamicResource EyeButtonStyle}"/>

                        <Button
                            x:Name="DisEyeButton"
                            Margin="0 0 10 0"
                            Visibility="Collapsed"
                            HorizontalAlignment="Right"
                            Click="DisEyeButton_Click"
                            Style="{DynamicResource DisEyeButtonStyle}"/>
                    </DockPanel>
                </Grid>

            </Border>
            
            <Border Margin="10 5"
                    MouseUp="Border_MouseUp">
                <Grid>
                    <Label x:Name="RegisterLbl"
                           Content="Ro'yxatdan o'tganmisiz?"
                           Style="{DynamicResource Label}"
                           FontWeight="SemiBold"
                           Margin="5 0"
                           Foreground="#588157"
                           FontSize="10"/>      

                    <materialDesign:PackIcon
                            Kind="ArrowRight"
                            Foreground="#588157"
                            Width="20"
                            Height="20"
                            Margin="5 0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Right"/>
                </Grid>
            </Border>

            <Grid>
                <StackPanel>
                    <Button x:Name="LoginBtn"
                        Content="Kirish"
                        Width="250"
                        Margin="0 5"
                        FontSize="18"
                        Background="#588157"
                        Click="LoginBtn_Click"
                        Style="{DynamicResource mainButton}"/>
                </StackPanel>
                <local:Loader
                            x:Name="Loader"
                            Visibility="Collapsed"
                            HorizontalAlignment="Center"/>
            </Grid>
        </StackPanel>
    </Grid>
</Page>
