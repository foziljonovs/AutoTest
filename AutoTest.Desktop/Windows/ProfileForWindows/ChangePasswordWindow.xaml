<Window x:Class="AutoTest.Desktop.Windows.ProfileForWindows.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoTest.Desktop.Windows.ProfileForWindows" xmlns:local1="clr-namespace:AutoTest.Desktop.Components.Loader"
        mc:Ignorable="d"
        Title="ChangePasswordWindow" 
        Height="270"
        Width="400"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Label Content="Parolni o'zgartirish"
                   Style="{DynamicResource Label}"
                   FontSize="18"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Margin="10 0 0 0"/>

            <Button x:Name="CloseBtn"
                    Style="{DynamicResource WindowCloseBtnStyle}"
                    HorizontalAlignment="Right"
                    Margin="0 0 10 0"
                    Click="CloseBtn_Click"/>
        </Grid>
        <StackPanel Grid.Row="1" Margin="0 10">
            <Label Content="Eski parol"
                   Style="{DynamicResource Label}"
                   FontSize="16"
                   HorizontalAlignment="Left"
                   Margin="10 0 0 0"/>
            
            <Border Height="40"
                    Margin="10 0 10 10"
                    CornerRadius="5"
                    BorderThickness="1"
                    BorderBrush="#344e41">
                <DockPanel>
                    <TextBox x:Name="OldPasswordTxt"
                             FontFamily="Jetbrains Mono"
                             FontWeight="SemiBold"
                             FontSize="18"
                             Width="320"
                             Visibility="Collapsed"
                             MaxLength="8"
                             VerticalContentAlignment="Center"
                             HorizontalAlignment="Left"
                             Foreground="Black"
                             Background="Transparent"
                             BorderThickness="0"/>

                    <PasswordBox x:Name="OldPasswordPwd"
                                 FontWeight="SemiBold"
                                 FontSize="18"
                                 MaxLength="8"
                                 Width="320"
                                 Margin="5"
                                 VerticalContentAlignment="Center"
                                 HorizontalAlignment="Left"
                                 Foreground="Black"
                                 Background="White"
                                 BorderThickness="0"
                                 PasswordChanged="OldPasswordPwd_PasswordChanged"/>

                    <Button x:Name="OldEyeButton"
                            Style="{DynamicResource EyeButtonStyle}"
                            HorizontalAlignment="Right"
                            Visibility="Collapsed"
                            Width="30"
                            Height="30"
                            Click="OldEyeButton_Click"/>

                    <Button x:Name="OldDisEyeButton"
                            Style="{DynamicResource DisEyeButtonStyle}"
                            HorizontalAlignment="Right"
                            Width="30"
                            Height="30"
                            Visibility="Visible"
                            Click="OldDisEyeButton_Click"/>
                </DockPanel>
            </Border>

            <Label Content="Yangi parol"
                   Style="{DynamicResource Label}"
                   FontSize="16"
                   HorizontalAlignment="Left"
                   Margin="10 0 0 0"/>  

            <Border Height="40"
                    Margin="10 0 10 10"
                    CornerRadius="5"
                    BorderThickness="1"
                    BorderBrush="#344e41">
                <DockPanel>
                    <TextBox x:Name="NewPasswordTxt"
                             FontFamily="Jetbrains Mono"
                             FontWeight="SemiBold"
                             FontSize="18"
                             Width="320"
                             Visibility="Collapsed"
                             MaxLength="8"
                             VerticalContentAlignment="Center"
                             HorizontalAlignment="Left"
                             Foreground="Black"
                             Background="Transparent"
                             BorderThickness="0"/>

                    <PasswordBox x:Name="NewPasswordPwd"
                                 FontWeight="SemiBold"
                                 FontSize="18"
                                 MaxLength="8"
                                 Width="320"
                                 Margin="5"
                                 VerticalContentAlignment="Center"
                                 HorizontalAlignment="Left"
                                 Foreground="Black"
                                 Background="White"
                                 BorderThickness="0"
                                 PasswordChanged="NewPasswordPwd_PasswordChanged"/>

                    <Button x:Name="NewEyeButton"
                            Style="{DynamicResource EyeButtonStyle}"
                            HorizontalAlignment="Right"
                            Width="30"
                            Height="30"
                            Visibility="Collapsed"
                            Click="NewEyeButton_Click"/>

                    <Button x:Name="NewDisEyeButton"
                            Style="{DynamicResource DisEyeButtonStyle}"
                            HorizontalAlignment="Right"
                            Width="30"
                            Height="30"
                            Visibility="Visible"
                            Click="NewDisEyeButton_Click"/> 
                </DockPanel>
            </Border>
        </StackPanel>

        <Grid Grid.Row="2">
            <StackPanel>
                <Button x:Name="SaveBtn"
                        Content="Saqlash"
                        FontSize="18"
                        Margin="10 0 10 5"
                        Background="#588157"
                        Click="SaveBtn_Click"
                        Style="{DynamicResource mainButton}"/>
            </StackPanel>

            <local1:Loader x:Name="ChangeLoader"
                           Visibility="Collapsed"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>
