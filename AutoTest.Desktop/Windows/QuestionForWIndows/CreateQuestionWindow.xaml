<Window x:Class="AutoTest.Desktop.Windows.QuestionForWIndows.CreateQuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoTest.Desktop.Windows.QuestionForWIndows"
        mc:Ignorable="d"
        Title="CreateQuestionWindow"
        Height="350"
        Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Label Content="Savol yaratish"
                   FontSize="18"
                   Style="{DynamicResource Label}"
                   VerticalAlignment="Center"
                   Margin="10 0 0 0"/>

            <Button x:Name="CloseBtn"
                    Style="{DynamicResource WindowCloseBtnStyle}"
                    HorizontalAlignment="Right"
                    Margin="0 0 10 0"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="35"/>
            </Grid.RowDefinitions>
            
            <Grid Grid.Row="0">
                <Label Content="Savol"
                       FontSize="14"
                       Margin="10 0 0 0"
                       Style="{DynamicResource Label}"/>

                <Border 
                    Margin="10"
                    Height="40"
                    BorderThickness="1"
                    VerticalAlignment="Bottom"
                    BorderBrush="#344e41"
                    CornerRadius="5">
                    <TextBox x:Name="txtProblem"
                             Margin="5 0"
                             VerticalContentAlignment="Center"
                             FontSize="20"
                             BorderThickness="0"/>
                </Border>
            </Grid>

            <Grid Grid.Row="1"
                  Margin="10 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Content="Turi"
                       FontSize="14"
                       Style="{DynamicResource Label}"
                       VerticalAlignment="Center"/>

                <RadioButton Grid.Column="1"
                             x:Name="rbTrueOrFalse"
                             Content="Ha/Yo'q"
                             VerticalAlignment="Center"
                             FontSize="14"
                             FontFamily="Jetbrains Mono"
                             FontWeight="SemiBold"/>

                <RadioButton Grid.Column="2"
                             x:Name="rbFillInTheBlank"
                             Content="Bo'sh joy"
                             VerticalAlignment="Center"
                             FontSize="14"
                             FontFamily="Jetbrains Mono"
                             FontWeight="SemiBold"/>
                
                <RadioButton Grid.Column="3"
                             x:Name="rbMultiple"
                             Content="Ko'p variantli"
                             VerticalAlignment="Center"
                             FontSize="14"
                             FontFamily="Jetbrains Mono"
                             FontWeight="SemiBold"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
