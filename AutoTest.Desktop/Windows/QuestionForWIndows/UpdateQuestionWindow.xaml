<Window x:Class="AutoTest.Desktop.Windows.QuestionForWIndows.UpdateQuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoTest.Desktop.Windows.QuestionForWIndows"
        mc:Ignorable="d"
        Title="UpdateQuestionWindow"
        Height="350"
        Width="400"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Label Content="Savol o'zgartirish"
                    FontSize="18"
                    Style="{DynamicResource Label}"
                    VerticalAlignment="Center"
                    Margin="10 0 0 0"/>

            <Button x:Name="CloseBtn"
                    Style="{DynamicResource WindowCloseBtnStyle}"
                    HorizontalAlignment="Right"
                    Margin="0 0 10 0"
                    Click="CloseBtn_Click"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.5*"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="35"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Label Content="Savol"
                        FontSize="14"
                        Margin="10 0 0 0"
                        Style="{DynamicResource Label}"/>

                <Border 
                    Margin="10"
                    Height="40"
                    BorderThickness="1"
                    VerticalAlignment="Bottom"
                    BorderBrush="#344e41"
                    CornerRadius="5">
                    <TextBox x:Name="txtProblem"
                             Margin="5 0"
                             VerticalContentAlignment="Center"
                             FontSize="20"
                             BorderThickness="0"/>
                </Border>
            </Grid>

            <Grid Grid.Row="1"
                  Margin="10 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.5*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label Content="Turi"
                       FontSize="14"
                       Style="{DynamicResource Label}"
                       VerticalAlignment="Center"/>

                <RadioButton Grid.Column="1"
                             x:Name="rbTrueOrFalse"
                             Content="Ha/Yo'q"
                             VerticalAlignment="Center"
                             FontSize="14"
                             FontFamily="Jetbrains Mono"
                             FontWeight="SemiBold"/>

                <RadioButton Grid.Column="2"
                             x:Name="rbFillInTheBlank"
                             Content="Bo'sh joy"
                             VerticalAlignment="Center"
                             FontSize="14"
                             FontFamily="Jetbrains Mono"
                             FontWeight="SemiBold"/>

                <RadioButton Grid.Column="3"
                             x:Name="rbMultiple"
                             Content="Ko'p variantli"
                             VerticalAlignment="Center"
                             FontSize="14"
                             FontFamily="Jetbrains Mono"
                             FontWeight="SemiBold"/>
            </Grid>

            <StackPanel Grid.Row="2"
                        Margin="10 0 10 5">
                <Frame x:Name="OptionPageNavigator"
                       Height="160"
                       NavigationUIVisibility="Hidden"
                       HorizontalAlignment="Stretch"
                       VerticalAlignment="Stretch"/>
            </StackPanel>

            <Grid Grid.Row="3"
                  Margin="0 0 10 5">
                <Button x:Name="CreateQuestionBtn"
                        Content="Saqlash"
                        Height="30"
                        Width="80"
                        Style="{DynamicResource mainButton}"
                        Background="#2196F3"
                        HorizontalAlignment="Right"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
