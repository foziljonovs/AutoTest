<Window x:Class="AutoTest.Desktop.Windows.TestForWindows.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoTest.Desktop.Windows.TestForWindows"
        xmlns:local1="clr-namespace:AutoTest.Desktop.Components.Loader"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Title="TestWindow"
        Height="350" 
        Width="600">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Column="0">
            <Label Content="Test ma'lumotlari"
                   FontSize="18"
                   Style="{DynamicResource Label}"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Margin="10 0 0 0"/>

            <Button x:Name="CloseBtn"
                    Style="{DynamicResource WindowCloseBtnStyle}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Click="CloseBtn_Click"
                    Margin="0 0 10 0"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.5*"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <StackPanel VerticalAlignment="Center">
                    <Grid Margin="10">
                        <TextBlock Text="Sarlavha: "
                                   FontSize="18"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   FontFamily="Jetbrains Mono"/>

                        <TextBlock x:Name="tbTitle"
                                   Width="300"
                                   FontSize="18"
                                   Text="C# boshlang'ich testlar"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Right"/>
                    </Grid>

                    <Grid Margin="10"
                          Height="100">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="300"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0"
                                   Text="Tavsif: "
                                   FontSize="18"
                                   HorizontalAlignment="Left"
                                   FontFamily="Jetbrains Mono"/>

                        <ScrollViewer Grid.Column="1">
                            <TextBlock x:Name="tbDescription"
                                       FontSize="18"
                                       TextWrapping="Wrap"
                                       Margin="5 0 5 0"
                                       Text="Qachonlardir bugungi kunda shunday bo'lishin bilar eding va o'sha kun keldi san endi hech qachon kechagi kunga qayta olmaysan."/>
                        </ScrollViewer>
                    </Grid>

                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Daraja: "
                                   FontSize="18"
                                   FontFamily="Jwtbrains Mono"/>

                        <TextBlock Grid.Column="1"
                                   x:Name="tbLevel"
                                   FontSize="18"
                                   Text="Easy"
                                   FontFamily="Jetbrains Mono"/>

                        <TextBlock Grid.Column="2"
                                   Text="Holati: "
                                   FontSize="18"
                                   FontFamily="Jetbrains Mono"/>

                        <TextBlock Grid.Column="3"
                                   x:Name="tbStatus"
                                   Text="InProgress"
                                   FontSize="18"
                                   FontFamily="Jetbrains Mono"/>
                    </Grid>

                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <TextBlock Text="Testlar soni: "
                                       FontSize="18"
                                       FontFamily="Jetbrains Mono"/>

                            <TextBlock x:Name="tbTestCount"
                                       Text="10"
                                       FontSize="18"
                                       FontFamily="Jetbrains Mono"
                                       HorizontalAlignment="Right"/>
                        </Grid>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="UploadTestBtn"
                                    Grid.Column="0"
                                    Content="PDF olish"
                                    Style="{DynamicResource mainButton}"
                                    Margin="0 10 10 0"
                                    Background="MediumSeaGreen"
                                    Click="UploadTestBtn_Click"/>

                            <Button x:Name="GenerateTestBtn"
                                    Grid.Column="1"
                                    Content="AI Generatsiya"
                                    Style="{DynamicResource mainButton}"
                                    Margin="5 10 5 0"
                                    Background="Tomato"/>

                            <Button x:Name="ViewQuestionsBtn"
                                    Grid.Column="2"
                                    Content="Savollar"
                                    Style="{DynamicResource mainButton}"
                                    Margin="10 10 0 0"
                                    Click="ViewQuestionsBtn_Click"
                                    Background="#2196F3"/>
                        </Grid>
                    </Grid>
                </StackPanel>

                <Label x:Name="EmptyData"
                       Content="Testni qayta yuklashda muammo yuz berdi!"
                       Style="{DynamicResource Label}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Visibility="Collapsed"/>

                <local1:Loader
                    x:Name="TestLoader"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Visibility="Collapsed"/>
            </Grid>

            <Grid Grid.Column="1">
                <local1:Loader x:Name="TopicLoader"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Visibility="Collapsed"/>

                <ScrollViewer Margin="5 10">
                    <WrapPanel x:Name="stTopics"
                               Orientation="Horizontal"
                               Margin="0 0 5 0"/>
                </ScrollViewer>

                <Label x:Name="EmptyDataSelectTopic"
                       Content="Mavzular topilmadi!"
                       Style="{DynamicResource Label}"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Visibility="Collapsed"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
