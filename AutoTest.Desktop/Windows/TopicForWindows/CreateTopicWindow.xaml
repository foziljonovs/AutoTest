<Window x:Class="AutoTest.Desktop.Windows.TopicForWindows.CreateTopicWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoTest.Desktop.Windows.TopicForWindows" 
        xmlns:local1="clr-namespace:AutoTest.Desktop.Components.Loader"
        mc:Ignorable="d"
        Title="CreateTopicWindow" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="White"    
        Height="300"
        Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Label Content="Mavzu yaratish"
                   FontSize="18"
                   HorizontalAlignment="Left"
                   Style="{DynamicResource Label}"
                   Margin="10 0 0 0"
                   VerticalAlignment="Center"/>

            <Button x:Name="CloseBtn"
                    Click="CloseBtn_Click"
                    Style="{DynamicResource WindowCloseBtnStyle}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0 0 10 0"/>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0">
                <Label 
                    Content="Nomi"
                    FontSize="14"
                    Margin="10 15 0 5"
                    Style="{DynamicResource Label}"/>

                <Border
                    Margin="10 0"
                    CornerRadius="5"
                    BorderThickness="1"
                    Height="40"
                    BorderBrush="#344e41">
                    <TextBox x:Name="txtName"
                             VerticalContentAlignment="Center"
                             Background="Transparent"
                             BorderThickness="0"
                             FontSize="20"
                             Margin="5 0"/>
                </Border>
            </StackPanel>
            <StackPanel Grid.Row="1">
                <Label 
                    Content="Tavsifi"
                    FontSize="14"
                    Margin="10 10 0 5"
                    Style="{DynamicResource Label}"/>

                <Border
                    Margin="10 0"
                    CornerRadius="5"
                    BorderThickness="1"
                    Height="40"
                    BorderBrush="#344e41">
                    <TextBox x:Name="txtDescription"
                             VerticalContentAlignment="Center"
                             FontSize="20"
                             Background="Transparent"
                             BorderThickness="0"
                             Margin="5 0"/>
                </Border>
            </StackPanel>
        </Grid>
        
        <Grid Grid.Row="2">
            <StackPanel>
                <Button x:Name="SaveBtn"
                        Content="Saqlash"
                        Width="140"
                        Margin="0 5"
                        Click="SaveBtn_Click"
                        Style="{DynamicResource mainButton}"
                        Background="MediumSeaGreen"/>
            </StackPanel>

            <local1:Loader
                x:Name="BtnLoader"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Visibility="Collapsed"/>
        </Grid>
    </Grid>
</Window>
