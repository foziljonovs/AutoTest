<UserControl x:Class="AutoTest.Desktop.Components.TestForComponents.TestComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoTest.Desktop.Components.TestForComponents"
             mc:Ignorable="d" 
             Height="45">
    <Border
        x:Name="st_Border"
        Margin="5 3 5 0"
        Background="White"
        CornerRadius="5"
        BorderThickness="1"
        BorderBrush="#344e41">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="0.6*"/>
                <ColumnDefinition Width="75"/>
            </Grid.ColumnDefinitions>

            <TextBlock
                x:Name="tbNumber"
                Grid.Column="0"
                Text="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="Black"
                FontSize="13"
                FontWeight="SemiBold"/>

            <TextBlock
                x:Name="tbTitle"
                Grid.Column="1"
                Text="What is C#?"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Foreground="Black"
                FontSize="13"
                FontWeight="SemiBold"/>

            <TextBlock
                x:Name="tbLevel"
                Grid.Column="2"
                Text="Easy"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="Black"
                FontSize="13"
                FontWeight="SemiBold"/>

            <TextBlock
                x:Name="tbStatus"
                Grid.Column="3"
                Text="Active"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="Black"
                FontSize="13"
                FontWeight="SemiBold"/>

            <TextBlock
                x:Name="tbTopic"
                Grid.Column="4"
                Text="C#"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Foreground="Black"
                FontSize="13"
                FontWeight="SemiBold"/>

            <Grid Grid.Column="5">
                <Button x:Name="EditBtn"
                        Height="30"
                        Width="30"
                        Margin="5 0 0 0"
                        Click="EditBtn_Click"
                        Style="{DynamicResource mainEditButton}"
                        HorizontalAlignment="Left"/>

                <Button x:Name="DeleteBtn"
                        Height="30"
                        Width="30"
                        Margin="0 0 5 0"
                        Click="DeleteBtn_Click"
                        Style="{DynamicResource mainDeleteButton}"
                        HorizontalAlignment="Right"/>
            </Grid>
        </Grid>
    </Border>
</UserControl>
