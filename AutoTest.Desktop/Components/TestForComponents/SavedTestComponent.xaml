<UserControl x:Class="AutoTest.Desktop.Components.TestForComponents.SavedTestComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoTest.Desktop.Components.TestForComponents"
             mc:Ignorable="d" 
             Height="45">
    <Border CornerRadius="5"
            Background="White"
            BorderThickness="1"
            BorderBrush="#344e41"
            Margin="3 5 3 0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="75"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       x:Name="tbNumber"
                       FontSize="13"
                       Text="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"/>

            <TextBlock Grid.Column="1"
                       x:Name="tbTitle"
                       Text="How do connect VPS server"
                       FontSize="13"
                       VerticalAlignment="Center"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"/>

            <TextBlock Grid.Column="2"
                       x:Name="tbAuthor"
                       Margin="5 0"
                       Text="Abdulvosid"
                       FontSize="13"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>

            <TextBlock Grid.Column="3"
                       x:Name="tbLevel"
                       Text="Medium"
                       FontSize="13"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>

            <StackPanel Grid.Column="4"
                        Orientation="Horizontal">
                <Button x:Name="ViewButton"
                        Style="{DynamicResource mainViewButton}"
                        Height="30"
                        Margin="5 0 0 0"
                        Width="30"/>

                <Button x:Name="DeleteButton"
                        Style="{DynamicResource mainDeleteButton}"
                        Height="30"
                        Margin="5 0 5 0"
                        Width="30"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
