<UserControl x:Class="AutoTest.Desktop.Components.TestForComponents.TestSolutionComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoTest.Desktop.Components.TestForComponents"
             mc:Ignorable="d" 
             Height="45">
    <Border Margin="3 5 3 0"
            Background="White"
            CornerRadius="5"
            BorderThickness="1"
            BorderBrush="#344e41">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="60"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="tbNumber"
                       Grid.Column="0"
                       Text="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="13"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"/>

            <TextBlock x:Name="tbTitle"
                       Grid.Column="1"
                       Text="C# basic test"
                       VerticalAlignment="Center"
                       FontSize="13"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"/>

            <TextBlock x:Name="tbSolutionTestCount"
                       Grid.Column="2"
                       Text="9"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="13"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"/>

            <TextBlock x:Name="tbScore"
                       Grid.Column="3"
                       Text="45"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       FontSize="13"
                       FontFamily="Jetbrains Mono"
                       FontWeight="SemiBold"/>
        </Grid>
    </Border>
</UserControl>
