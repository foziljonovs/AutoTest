<UserControl x:Class="AutoTest.Desktop.Components.OptionForComponents.SolutionOptionComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoTest.Desktop.Components.OptionForComponents"
             mc:Ignorable="d" 
             Height="40">
    <Border CornerRadius="5"
            BorderThickness="1"
            BorderBrush="#344e41"
            Margin="3 5 3 0"
            MouseDown="Border_MouseDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="tbCharacter"
                       Grid.Column="0"
                       Text="A"
                       FontSize="14"
                       FontWeight="SemiBold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontFamily="Jetbrains Mono"/>

            <TextBlock x:Name="tbOption"
                       Grid.Column="1"
                       Text="To'g'ri javob"
                       FontSize="14"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"
                       FontFamily="Jetbrains Mono"/>
        </Grid>
    </Border>
</UserControl>
