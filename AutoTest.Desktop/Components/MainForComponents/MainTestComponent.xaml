<UserControl x:Class="AutoTest.Desktop.Components.MainForComponents.MainTestComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoTest.Desktop.Components.MainForComponents"
             mc:Ignorable="d" 
             Height="45">
    <Border
        x:Name="st_border"
        Margin="5 3 5 0"
        Background="White"
        CornerRadius="5"
        BorderThickness="1"
        BorderBrush="#344e41"
        MouseEnter="st_border_MouseEnter">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>

            <TextBlock
                x:Name="tbNumber"
                Grid.Column="0"
                Text="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="13"
                FontWeight="SemiBold"
                Foreground="Black"/>

            <TextBlock
                x:Name="tbTitle"
                Grid.Column="1"
                Text="What is C#?"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontSize="13"
                FontWeight="SemiBold"
                Foreground="Black"/>

            <TextBlock
                x:Name="tbTopic"
                Grid.Column="2"
                Text="C#"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="13"
                FontWeight="SemiBold"
                Foreground="Black"/>
        </Grid>
    </Border>
</UserControl>
