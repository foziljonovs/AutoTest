<UserControl x:Class="AutoTest.Desktop.Components.MainForComponents.MainQuestionComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoTest.Desktop.Components.MainForComponents"
             mc:Ignorable="d" 
             Height="45">
    <Border
        CornerRadius="5"
        Background="White"
        Margin="3 5 3 0"
        BorderThickness="1"
        BorderBrush="#344e41">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="tbNumber"
                       Grid.Column="0"
                       Text="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="13"
                       FontWeight="SemiBold"/>

            <TextBlock x:Name="tbProblem"
                          Grid.Column="1"
                          Text="How to connect postgreSQL in .net core?"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Left"
                          FontSize="13"
                          FontWeight="SemiBold"/>

            <TextBlock x:Name="tbType"
                          Grid.Column="2"
                          Text="Multiple"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Left"
                          FontSize="13"
                          FontWeight="SemiBold"/>
        </Grid>
    </Border>
</UserControl>
